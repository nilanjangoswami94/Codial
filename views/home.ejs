<h1>Codial / <%= title %></h1>

<section id="feed-posts">
    <h4>Posts</h4>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" id="new-post-content" cols="30" rows="3" placeholder="Type here ..."></textarea>
        <input type="submit" value="Post">
    </form>

    <div id="posts-list-container">
        <ul>
            <% for (post of posts) { %>

            <li>
                <%= post.content %>
            </li>

            <% } %>
        </ul>
    </div>
</section>